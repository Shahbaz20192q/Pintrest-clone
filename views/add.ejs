<% include ./partials/header.ejs %>
<div
    class="px-10 py-5 text-white w-full min-h-screen bg-zinc-800 flex items-center flex-col">
    <div class="border-2 p-[60px] rounded-lg">
        <h1 class="text-2xl">Create a new post.</h1>
        <hr class="opacity-10 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class=" w-96 px-3 py-2" type="file" name="postimage"> <br>
            <input
                class=" w-96 px-3 py-2 border-2 rounded-md mt-2 text-zinc-800"
                type="text"
                placeholder="Title" name="title"> <br>
            <textarea
                class=" w-96 px-3 py-2 h-60 border-2 rounded-md mt-2 text-zinc-800"
                type="text" placeholder="Description" name="description"></textarea><br>
            <input class=" w-96 px-3 py-2 rounded-md mt-2 bg-red-700"
                type="submit" value="Create Post"> <br>
        </form>
    </div>
</div>

